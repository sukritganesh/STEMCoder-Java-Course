import java.lang.Math;

public class MathMethods {

	public static void main(String[] args) {

		int test1 = 98;
		int test2 = 89;
		int test3 = 97;
		
		int quiz1 = 94;
		int quiz2 = 96;
		
		int home1 = 100;
		int home2 = 100;
		int home3 = 0;

		int average = 0;
		
		int testavg = (test1 + test2 + test3)/3;
		int quizavg = (quiz1 + quiz2)/2;
		int homeavg = (home1 + home2 + home3)/3;
		
		average = (testavg * 50 + quizavg * 30 + homeavg * 20)/30;
		
		System.out.println(average);
		
	}

}
